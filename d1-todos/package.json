{
  "name": "d1-todos",
  "version": "0.0.0",
  "description": "workspace for the piercing migration strategy demo",
  "workspaces": [
    "shared",
    "apps/*"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "node ./scripts/dev.mjs",
    "deploy-setup": "node ./scripts/deploy-setup.mjs",
    "deploy": "node ./scripts/deploy.mjs",
    "postinstall": "patch-package ; npm run build-shared",
    "build-shared": "npm run --prefix shared build"
  },
  "author": "",
  "license": "Apache 2",
  "//devDependencies comment 0": "patch-package and @sveltejs/adapter-cloudflare are",
  "//devDependencies comment 1": "are needed for fixing a svelte-kit issue, but need",
  "//devDependencies comment 2": "to be applied here at the root",
  "devDependencies": {
    "inquirer": "^9.1.4",
    "npm-run-all": "^4.1.5",
    "open": "^8.4.0",
    "patch-package": "^6.5.0",
    "@sveltejs/adapter-cloudflare": "^1.0.3"
  }
}

{
	"version": "0.0.1",
	"scripts": {
		"svelte:dev": "vite dev",
		"build": "vite build",
		"build:watch": "vite build --watch",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"setup-db": "npx wrangler d1 execute D1_TODOS_DB -y --local --command 'CREATE TABLE if not exists TODOS (id CHAR PRIMARY KEY, text CHAR, completed CHAR, sessionId CHAR, date CHAR);'",
		"dev:wrangler": "npx wrangler pages dev ./.svelte-kit/cloudflare --port 8711 --d1 D1_TODOS_DB --live-reload --persist",
		"predev": "npm run build ; npm run setup-db",
		"dev": "run-p build:watch dev:wrangler",
		"predeploy": "npm run build",
		"deploy": "CLOUDFLARE_ACCOUNT_ID=8ed4d03ac99f77561d0e8c9cbcc76cb6 npx wrangler pages publish  ./.svelte-kit/cloudflare --bundle=true --branch main --project-name d1-todos-svelte-kit"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@neoconfetti/svelte": "^1.0.0",
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/adapter-cloudflare": "^1.0.3",
		"@sveltejs/kit": "^1.0.0",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-check": "^2.9.2",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0",
		"wrangler": "https://prerelease-registry.devprod.cloudflare.dev/prs/2608/npm-package-wrangler-2608"
	},
	"type": "module"
}
